<% layout('/layouts/boilerplate') %>
<div class="row">
    <div class="col-8">
        <h3>Create a New Listing</h3>
        <form method="POST"
          action="/listings"
            novalidate 
            class="needs-validation"
             enctype="multipart/form-data">
        >
            <div class="mb-3">
                <label for="title" class="form-label">Enter Title</label>
                <input id="title" name="listing[title]" type="text" class="form-control" required>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please enter a title.</div>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Upload Image</label>
                <input name="listing[image]" type="file" class="form-control">
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">Enter Price</label>
                <input id="price" name="listing[price]" type="number" class="form-control" required>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please enter a price.</div>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Enter Description</label>
                <textarea id="description" name="listing[description]" class="form-control" required></textarea>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please enter a description.</div>
            </div>
            <div class="mb-3">
                <label for="location" class="form-label">Enter Place</label>
                <input id="location" name="listing[location]" type="text" class="form-control" required>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please enter a location.</div>
            </div>
            <div class="mb-3">
                <label for="country" class="form-label">Enter Country</label>
                <input id="country" name="listing[country]" type="text" class="form-control" required>
                <div class="valid-feedback">Looks good!</div>
                <div class="invalid-feedback">Please enter a country.</div>
            </div>
            <button class="btn btn-dark" type="submit">Create</button>
        </form>
    </div>
</div>
